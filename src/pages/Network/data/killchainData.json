        "concept": {
            "title": "Cyber Kill Chain: La Estructura del Ataque",
            "description": "Lockheed Martin adaptó este concepto militar para modelar las 7 fases secuenciales de una intrusión. El objetivo defensivo es 'romper' cualquier eslabón.",
            "phases": [
                {
                    "step": 1,
                    "name": "Reconocimiento",
                    "desc": "Recopilación de información del objetivo."
                },
                {
                    "step": 2,
                    "name": "Armamentización",
                    "desc": "Creación de malware a medida (Weaponization)."
                },
                {
                    "step": 3,
                    "name": "Entrega",
                    "desc": "Envío del payload (Phishing, USB, Web)."
                },
                {
                    "step": 4,
                    "name": "Explotación",
                    "desc": "Ejecución de código para ganar acceso."
                },
                {
                    "step": 5,
                    "name": "Instalación",
                    "desc": "Backdoors y persistencia."
                },
                {
                    "step": 6,
                    "name": "Control (C2)",
                    "desc": "Canal de mando remoto."
                },
                {
                    "step": 7,
                    "name": "Acciones",
                    "desc": "Robo, destrucción o cifrado."
                }
            ]
        },
        "phase1": {
            "title": "Fase 1: Reconocimiento (La Base)",
            "subtitle": "Aprender lo máximo posible sobre el entorno objetivo sin ser detectado.",
            "techniques": [
                {
                    "name": "Footprinting Activo",
                    "desc": "Interactúa con el objetivo (Ping, Traceroute). Riesgo de detección alto (IDS).",
                    "color": "warning"
                },
                {
                    "name": "Footprinting Pasivo",
                    "desc": "No toca el objetivo. OSINT, Redes Sociales, WHOIS, Archive.org. Sigiloso.",
                    "color": "success"
                }
            ],
            "tools": {
                "title": "Arsenal de Reconocimiento",
                "items": [
                    "OSRFramework (OSINT automatizado)",
                    "Maltego (Relaciones gráficas)",
                    "Shodan / Nmap (Escaneo)"
                ]
            },
            "types": [
                {
                    "name": "Website",
                    "desc": "Tecnologías usadas (BuiltWith, Whatweb)."
                },
                {
                    "name": "Email",
                    "desc": "Rastreo de cabeceras e IPs."
                },
                {
                    "name": "DNS",
                    "desc": "Mapeo de infraestructura (DNS Dumpster)."
                },
                {
                    "name": "Red",
                    "desc": "Identificar hosts vivos, puertos y SO."
                }
            ]
        },
        "phase2": {
            "title": "Fase 2: Armamentización (Weaponization)",
            "subtitle": "Creación del arsenal digital personalizado para el objetivo.",
            "concepts": [
                {
                    "term": "Exploit Kit",
                    "def": "Herramienta que automatiza el uso de vulnerabilidades."
                },
                {
                    "term": "Payload",
                    "def": "La carga maliciosa (Malware) que se ejecutará."
                },
                {
                    "term": "Crypters",
                    "def": "Software para cifrar malware y evadir antivirus."
                }
            ],
            "malwareTypes": {
                "trojans": [
                    "Backdoor",
                    "Keylogger",
                    "Ransomware (WannaCry, Ryuk)"
                ],
                "virus": [
                    "Boot Sector",
                    "Polymórficos (cambian su código)",
                    "Macro Virus"
                ],
                "worms": [
                    "Se propagan solos consumiendo red (Stuxnet)."
                ]
            }
        },
        "phase3": {
            "title": "Fase 3: Acceso Inicial (Exploitation)",
            "subtitle": "El momento de la verdad: rompiendo el perímetro.",
            "vectors": [
